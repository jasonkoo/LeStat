<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] %m%n" />
		</layout>
	</appender>
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${lestat.home}/logs/${logfile.name}" />
		<!-- <param name="File" value="${xy.root}/WEB-INF/logs/main.log" /> -->
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss} [%c]-[%p] %m%n" />
		</layout>
	</appender>

	<logger name="com.liuhongkai.test">
		<level value="DEBUG" />
		<appender-ref ref="file" />
	</logger>
	<logger name="com.liuhongkai.util">
		<level value="DEBUG" />
		<appender-ref ref="file" />
	</logger>
	<logger name="com.lenovo">
		<level value="INFO" />
		<appender-ref ref="file" />
	</logger>

	<logger name="org.springframework">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.hibernate">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.quartz">
		<level value="INFO" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.activemq">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.commons">
		<level value="INFO" />
		<appender-ref ref="file" />
	</logger>
	<logger name="net.sf">
		<level value="INFO" />
		<appender-ref ref="file" />
	</logger>

	<logger name="org.apache.coyote">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.catalina">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.cxf">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.eclipse.jetty">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.mina">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="net.myrrix">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="kafka">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.I0Itec">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.zookeeper">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.apache.hadoop">
		<level value="ERROR" />
		<appender-ref ref="file" />
	</logger>
	
	<root>
		<priority value="DEBUG" />
		 <appender-ref ref="console" /> <!-- <appender-ref ref="file" />  -->
	</root>
</log4j:configuration>